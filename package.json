{
  "name": "openshortlink",
  "version": "1.0.0",
  "description": "OpenShort.link - Open-source Cloudflare-based link shortener and management platform",
  "overrides": {
    "js-yaml": ">=4.1.1",
    "esbuild": ">=0.25.12"
  },
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run db:migrate && wrangler deploy",
    "deploy:only": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply DB --remote",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "migrate": "wrangler d1 migrations apply openshortlink-db --remote",
    "migrate:local": "wrangler d1 migrations apply openshortlink-db --local",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:api": "./test/scripts/test-api.sh",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "cloudflare",
    "workers",
    "link-shortener",
    "analytics",
    "url-shortener"
  ],
  "author": "",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "hono": "^4.10.4",
    "otpauth": "^9.4.1",
    "zod": "^4.1.12"
  },
  "cloudflare": {
    "bindings": {
      "SETUP_TOKEN": {
        "description": "Security token for first user setup. Generate with `openssl rand -hex 32` for production, or use a strong password (20+ chars) for personal use."
      },
      "CLOUDFLARE_ACCOUNT_ID": {
        "description": "Your [Cloudflare Account ID](https://dash.cloudflare.com/) - found in the dashboard URL or right sidebar."
      },
      "CLOUDFLARE_API_TOKEN": {
        "description": "API token with **Account Analytics Read** permission. [Create one here](https://dash.cloudflare.com/profile/api-tokens)."
      }
    }
  }
}